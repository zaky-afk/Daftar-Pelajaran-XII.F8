                </div>
            </div>
            <button onclick="addDefaultLesson()" class="mt-4 w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700">Tambahkan Pelajaran</button>
        </div>
    </div>

    <script>
        // Dark mode toggle
        const darkModeToggle = document.getElementById('darkModeToggle');
        darkModeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            
            if (document.body.classList.contains('dark-mode')) {
                darkModeToggle.innerHTML = '<span class="mr-2">Mode Terang</span><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>';
                localStorage.setItem('darkMode', 'enabled');
            } else {
                darkModeToggle.innerHTML = '<span class="mr-2">Mode Gelap</span><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>';
                localStorage.setItem('darkMode', 'disabled');
            }
        });

        // Check for saved dark mode preference
        if (localStorage.getItem('darkMode') === 'enabled') {
            document.body.classList.add('dark-mode');
            darkModeToggle.innerHTML = '<span class="mr-2">Mode Terang</span><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>';
        }

        // Sample data untuk pelajaran awal
        const initialLessons = {
            senin: [],
            selasa: [],
            rabu: [],
            kamis: [],
            jumat: []
        };

        // Memuat pelajaran awal
        document.addEventListener('DOMContentLoaded', () => {
            for (const day in initialLessons) {
                initialLessons[day].forEach(lesson => {
                    addLessonToDay(day, lesson);
                });
            }
        });

        // Fungsi untuk menambahkan pelajaran
        function addLesson(day) {
            const inputElement = document.getElementById(`${day}-input`);
            const lesson = inputElement.value.trim();
            
            if (lesson) {
                addLessonToDay(day, lesson);
                inputElement.value = '';
            }
        }

        // Fungsi untuk menambahkan pelajaran dari daftar default
        function addDefaultLesson() {
            const day = document.getElementById('default-day').value;
            const lesson = document.getElementById('default-lesson').value;
            addLessonToDay(day, lesson);
        }

        // Fungsi untuk menambahkan pelajaran ke hari tertentu
        function addLessonToDay(day, lesson) {
            const list = document.getElementById(`${day}-list`);
            const listItem = document.createElement('li');
            
            listItem.className = 'flex justify-between items-center px-3 py-2 bg-gray-50 rounded fade-in';
            listItem.innerHTML = `
                <span>${lesson}</span>
                <button onclick="removeLesson(this, '${day}')" class="text-red-500 hover:text-red-700">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </button>
            `;
            
            list.appendChild(listItem);
        }

        // Fungsi untuk menghapus pelajaran
        function removeLesson(button, day) {
            const listItem = button.closest('li');
            listItem.classList.remove('fade-in');
            listItem.classList.add('opacity-0', 'transition-opacity', 'duration-300');
            
            setTimeout(() => {
                listItem.remove();
            }, 300);
        }
    </script>
</body>
</html>
